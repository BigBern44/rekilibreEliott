{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	- Réinscription
{% endblock %}

{% block body %}
	{% set thisDate = "now"|date("Y") %}
	<div class="row justify-content-center">
		<div class="col-md-11 mt-4 p-2 shadow-lg p-3 h-100 layout-description">
			{% if doneRegistration %}
				<h1 class="text-success">Votre ré-inscription est enregistrée</h1>
				<p class="font-weight-bold">Pour finaliser votre ré-inscription:</p>
				<ul>
					<li>
						Télécharger le bulletin d'adhésion
					</li>
					<li>
						Imprimer et signer le bulletin
					</li>
					<li>
						Envoyer le bulletin à FRANCOISE CARBONNIER 4 CHEMIN DU DOMAINE 44240 LA CHAPELLE/ERDRE accompagné du règlement de l’adhésion
					</li>
				</ul>
				<p class="text-weight-bold">MONTANT DE L’ADHESION : 25 € VALABLE DU 1ER SEPTEMBRE {{thisDate}} AU 31 AOUT {{thisDate + 1}}</p>
				<p class="text-danger">REGLEMENT DE L’ADHESION et DES ACTIVITES A L'ORDRE DE R'EKILIBRE (Possibilité en 3 chèques)</p>
				<p class="text-weight-bold">votre inscription sera validée à la réception du règlement totale de l’adhésion et des activités, accompagné du bulletin d’adhésion</p>

				<a href="{{path('app_register_generate_pdf',{'id':registration.id})}}" class="btn btn-primary">
					<p class="text-l mb-0">
						<i class="far fa-file-pdf"></i>
						Télécharger le bulletin d'inscription</p>
				</a>
			{% else %}
				{{form_start(form)}}
				<div class="row">
					<div class="col-12">
						{{form_row(form.activities)}}
					</div>
					<div class="col-12 ml-3">
						{{form_row(form.boardCandidate)}}
					</div>
					<div class="col-12 ml-3">
						{{form_row(form.agreePhoto)}}
					</div>
					<div class="col-12 ml-3 mb-3 text-primary">
						Merci d'indiquer les chèques joints à votre ré-inscription :
					</div>
					<div class="col-12 ml-3">
						{{form_row(form.membershipCheck)}}
					</div>
					<div class="col-12 ml-3 text-danger">
						ET
					</div>
					<div class="col-12 ml-3 mt-3">
						{{form_row(form.activitiesSingleCheck)}}
					</div>
					<div class="col-12 ml-3 text-danger">
						OU
					</div>
					<div class="col-12 ml-3 mt-3">
						{{form_row(form.activitiesMultiChecks)}}
					</div>
				</div>
				{{form_row(form.Valider)}}
				{{form_end(form)}}
			{% endif %}
		</div>
	</div>
{% endblock %}
