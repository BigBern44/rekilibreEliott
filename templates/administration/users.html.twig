<div class="row mb-2 justify-content-center">
    <div class="col-3 pl-0">
        <button class="btn btn-primary btn-block" data-target="#modalFormUser" data-toggle="modal" type="button">Ajouter un utilisateur</button>
    </div>
    <div class="col-3 pl-0">
        <a class="btn btn-primary btn-block" href="{{path('export_users')}}">Exporter les utilisateurs</a>
    </div>
    <div class="row col-6 navigation text-right pr-0">
        <form class="col-12" action="{{path('users')}}" method="get">
            <div class="input-group mb-2">
                <div class="input-group-prepend">
                    <div class="input-group-text">
                        <i aria-hidden="true" class="fas fa-search text-l text-secondary"></i>
                    </div>
                </div>
                <input name="search" aria-label="Recherche" class="form-control" placeholder="Recherche par nom" type="text" value="{{search}}"/>
                <div class="input-group-prepend p-0 m-0">
                    <button type="submit" class="btn btn-block p-0 m-0">
                        <div class="input-group-text" class="p-0 m-0">
                            <i class="fas fa-check text-success text-l m-0 p-0" data-toggle="tooltip" data-placement="left" title="Rechercher"></i>
                        </div>
                    </button>
                    <a href="{{path('users')}}">
                        <div class="input-group-text">
                            <i class="fas fa-times text-danger text-l" data-toggle="tooltip" data-placement="left" title="Annuler"></i>
                        </div>
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<table class="table table-striped table-secondary">
    <thead class="bg-primary text-white ">
        <tr>
            <th scope="col">Nom</th>
            <th scope="col">Prénom</th>
            <th scope="col">Civilité</th>
            <th scope="col">Date naiss.</th>
            <th scope="col">Email</th>
            <th scope="col">Statut</th>
            <th scope="col">Téléphone</th>
            <th scope="col">Adresse</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
            <tr>
                <th scope="row">{{user.surname}}</th>
                <td>{{user.firstname}}</td>
                <td>{{user.gender}}</td>
                <td>{{user.birthdate|date("d/m/Y")}}</td>
                <td>{{user.email}}</td>
                <td>{{user.status ? 'Adhérent':'Non adhérent'}} {% if "ROLE_REIKI" in user.roles %}[REIKI]{% endif %}</td>
                <td>{{user.phone}}</td>
                <td>{{user.fullAddress}}</td>
                <td>
                    <a data-target="#modalFormActivities{{user.id}}" data-toggle="modal" href="#">
                        <i class="fas fa-running text-primary text-l m-1" data-placement="left" data-toggle="tooltip" title="Activités"></i>
                    </a>
                    <a data-target="#modalFormPayments{{user.id}}" data-toggle="modal" href="#">
                        <i class="fas fa-euro-sign text-primary text-l m-1" data-placement="left" data-toggle="tooltip" title="Paiements"></i>
                    </a>
                    <a data-target="#modalFormUser{{user.id}}" data-toggle="modal" href="#">
                        <i class="far fa-edit text-primary text-l m-1" data-placement="left" data-toggle="tooltip" title="Modifier"></i>
                    </a>
                    <a href="{{path('delete_user',{'id':user.id,'page':page,'search':search})}}" onclick="return confirm('Confirmer la suppression ?');">
                        <i class="far fa-minus-square text-danger text-l m-1" data-toggle="tooltip" data-placement="left" title="Supprimer"></i>
                    </a>
                    {% include 'modal/users/activities.html.twig' with {'activities': user.activities} %}
                    {% include 'modal/users/payments.html.twig' with {'activities': user.activities} %}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<div class="row mt-2 justify-content-center">
    <div class="col navigation text-left">
        {{ knp_pagination_render(users) }}
    </div>
</div>

{% include 'modal/users/add.html.twig' %}

{% for formModifyUser in formModifyUsers %}
    {% include 'modal/users/modify.html.twig' with {'id': formModifyUser.vars.value.id} %}
{% endfor %}
