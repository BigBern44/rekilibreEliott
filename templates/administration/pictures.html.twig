<div class="row mb-2 justify-content-center">
    <div class="col-3 pl-0">
        <button class="btn btn-primary btn-block" data-target="#modalFormPicture" data-toggle="modal" type="button">Ajouter une image</button>
    </div>
    <div class="row col-9 navigation text-right pr-0">
        <form class="col-12" action="{{path('pictures')}}" method="get">
            <div class="input-group mb-2">
                <div class="input-group-prepend">
                    <div class="input-group-text">
                        <i aria-hidden="true" class="fas fa-search text-l text-secondary"></i>
                    </div>
                </div>
                <input name="search" aria-label="Recherche" class="form-control" placeholder="Recherche par nom" type="text" value="{{search}}"/>
                <div class="input-group-prepend p-0 m-0">
                    <button type="submit" class="btn btn-block p-0 m-0">
                        <div class="input-group-text" class="p-0 m-0">
                            <i class="fas fa-check text-success text-l m-0 p-0" data-toggle="tooltip" data-placement="left" title="Rechercher"></i>
                        </div>
                    </button>
                    <a href="{{path('pictures')}}">
                        <div class="input-group-text">
                            <i class="fas fa-times text-danger text-l" data-toggle="tooltip" data-placement="left" title="Annuler"></i>
                        </div>
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<table class="table table-striped table-secondary">
    <thead class="bg-primary text-white ">
        <tr>
            <th scope="col">Nom</th>
            <th scope="col">Image</th>
            <th scope="col">Url</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for picture in pictures %}
            <tr>
                <th scope="row">{{picture.name}}</th>
                <td><img src="{{asset(pictures_directory ~ picture.url)}}" style="width:100px;"></img></td>
                <td>{{absolute_url(asset(pictures_directory ~ picture.url))}}</td>
                <td>
                    <a data-target="#modalFormPicture{{picture.id}}" data-toggle="modal" href="#">
                        <i class="far fa-edit text-primary text-l m-1" data-placement="left" data-toggle="tooltip" title="Modifier"></i>
                    </a>
                    <a href="{{path('delete_picture',{'id':picture.id,'page':page,'search':search})}}" onclick="return confirm('Confirmer la suppression ?');">
                        <i class="far fa-minus-square text-danger text-l m-1" data-toggle="tooltip" data-placement="left" title="Supprimer"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<div class="row mt-2 justify-content-center">
    <div class="col navigation text-left">
        {{ knp_pagination_render(pictures) }}
    </div>
</div>

{% include 'modal/pictures/add.html.twig' %}

{% for formModifyPicture in formModifyPictures %}
    {% include 'modal/pictures/modify.html.twig' with {'id': formModifyPicture.vars.value.id} %}
{% endfor %}
