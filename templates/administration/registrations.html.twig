<div class="row mb-2 justify-content-center">
    <form class="col-12" action="{{path('registrations')}}" method="get">
        <div class="input-group mb-2">
            <div class="input-group-prepend">
                <div class="input-group-text">
                    <i aria-hidden="true" class="fas fa-search text-l text-secondary"></i>
                </div>
            </div>
            <input name="search" aria-label="Recherche" class="form-control" placeholder="Recherche par nom" type="text" value="{{search}}"/>
            <div class="input-group-prepend p-0 m-0">
                <button type="submit" class="btn btn-block p-0 m-0">
                    <div class="input-group-text" class="p-0 m-0">
                        <i class="fas fa-check text-success text-l m-0 p-0" data-toggle="tooltip" data-placement="left" title="Rechercher"></i>
                    </div>
                </button>
                <a href="{{path('registrations')}}">
                    <div class="input-group-text">
                        <i class="fas fa-times text-danger text-l" data-toggle="tooltip" data-placement="left" title="Annuler"></i>
                    </div>
                </a>
            </div>
        </div>
    </form>
</div>

<table class="table table-striped table-secondary">
    <thead class="bg-primary text-white ">
        <tr>
            <th scope="col">Nom</th>
            <th scope="col">Genre</th>
            <th scope="col">Naissance</th>
            <th scope="col">Email</th>
            <th scope="col">Téléphone</th>
            <th scope="col">Adresse</th>
            <th scope="col">Candidat</th>
            <th scope="col">Photo</th>
            <th scope="col">Ancien Adhérent</th>
            <th scope="col">Date création</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        {% for registration in registrations %}
            <tr>
                <th scope="row">{{registration.lastname}}
                    {{registration.firstname}}</th>
                <td>{{registration.gender}}</td>
                <td>{{registration.birthdate|date('d/m/Y')}}</td>
                <td>{{registration.emailAddress}}</td>
                <td>{{registration.phone}}</td>
                <td>{{registration.postAddress}}
                    {{registration.zipCode}}
                    {{registration.city}}</td>
                <td>{{registration.boardCandidate ? 'Oui':'Non'}}</td>
                <td>{{registration.agreePhoto ? 'Oui':'Non'}}</td>
                <td>{{registration.subscriber ? 'Oui':'Non'}}</td>
                <td>{{registration.dateCreate|date('d/m/Y')}}</td>
                <td>
                    {% if registration.dateValidate is null %}
                        <a href="#" data-target="#modalFormPayment{{registration.id}}" data-toggle="modal">
                            <i class="fas fa-check text-success text-l" data-toggle="tooltip" data-placement="left" title="Accepter"></i>
                        </a>
                        <a href="{{path('refuse_registration',{'id':registration.id,'page':page,'search':search})}}" onclick="return confirm('Confirmer le refus ? La demande serra supprimée.');" data-toggle="tooltip" data-placement="left" title="Refuser">
                            <i class="fas fa-times text-danger text-l"></i>
                        </a>
                        <a href="{{path('app_register_generate_pdf', {'id':registration.id})}}">
                            <i class="far fa-file-pdf text-primary text-l" data-toggle="tooltip" data-placement="left" title="Bulletin"></i>
                        </a>
                    {% else %}
                        <p class="text-success">Validée</p>
                    {% endif %}
                </td>
            </tr>

        {% endfor %}
    </tbody>
</table>

<div class="row mt-2 justify-content-center">
    <div class="col navigation text-left">
        {{ knp_pagination_render(registrations) }}
    </div>
</div>

{% for key,formValidRegistration in formValidRegistrations %}
    {% include 'modal/registrations/valid.html.twig' with {'formValid': formValidRegistration, 'id': key} %}
{% endfor %}
