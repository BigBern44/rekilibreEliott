{% set thisDate = "now"|date("Y") %}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Export paiements</title>
        <style>
            h2 {
                page-break-after: always;
            }
        </style>
    </head>
    <body>
        {% set date = payments[0].date %}
        {% set total = 0 %}
        <h1>{{date|date('d/m/y')}}</h1>

        {% for payment in payments %}
            
            {% if payment.date != date %}
                <h2>Total: {{total}}€</h2>
                {% set date = payment.date %}
                {% set total = 0 %}
                <h1>{{date|date('d/m/y')}}</h1>
            {% endif %}

            {% set total = total + payment.value %}
            <p>{{payment.user.surname}} {{payment.user.firstname}} {{payment.date|date('d/m/y')}} {{payment.type}} {{payment.value}}€</p>

        {% endfor %}

        <h2>Total: {{total}}€</h2>
    </body>
</html>
