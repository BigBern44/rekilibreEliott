<div aria-hidden="true" aria-labelledby="modalFormResetLabel" class="modal fade" id="modalFormReset" role="dialog" tabindex="-1">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            {{ form_start(formResetPassword) }}
            <div class="modal-header">
                <h5 class="modal-title" id="modalFormResetLabel">Reinitialiser votre mot de passe</h5>
                <button aria-label="Close" class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{ form_row(formResetPassword.email) }}
            </div>
            <div class="modal-footer">
                {{ form_widget(formResetPassword.Valider,{'attr':{'class':'btn btn-success'}}) }}
                <button class="btn btn-danger" data-dismiss="modal" type="button">Fermer</button>
            </div>
            {{ form_end(formResetPassword) }}
        </div>
    </div>
</div>
