<div aria-hidden="true" aria-labelledby="modalFormActivitiesLabel" class="modal fade" id="modalFormActivities{{user.id}}" role="dialog" tabindex="-1">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalFormActivitiesLabel">Activités :
                    {{user.surname}}
                    {{user.firstname}}</h5>
                <button aria-label="Close" class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {% if activities|length %}
                    {% for activity in activities %}
                        <div class="row">
                            <a class="btn btn-primary btn-block" href="{{path('detail_activity',{'id':activity.id})}}">
                                {{activity.displayName}}
                            </a>
                        </div>
                    {% endfor %}
                {% else %}
                    Aucune activité
                {% endif %}
            </div>
            <div class="modal-footer">
                <button class="btn btn-danger" data-dismiss="modal" type="button">Fermer</button>
            </div>
        </div>
    </div>
</div>
