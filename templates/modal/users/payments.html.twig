<div aria-hidden="true" aria-labelledby="modalFormPaymentsLabel" class="modal fade" id="modalFormPayments{{user.id}}" role="dialog" tabindex="-1">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalFormPaymentsLabel">Paiements:
                    {{user.surname}}
                    {{user.firstname}}</h5>
                <button aria-label="Close" class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {% if user.payments|length %}
                    {% for payment in user.payments %}
                        <div class="row">
                            <div class="col">
                                {{ payment.date|date('d/m/Y') }}
                            </div>
                            <div class="col">
                                {{ payment.type }}
                            </div>
                            <div class="col">
                                {{ payment.value }}
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    Aucun paiement
                {% endif %}
            </div>
            <div class="modal-footer">
                <button class="btn btn-danger" data-dismiss="modal" type="button">Fermer</button>
            </div>
        </div>
    </div>
</div>
