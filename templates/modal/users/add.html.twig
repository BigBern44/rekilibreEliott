<div aria-hidden="true" aria-labelledby="modalFormUserLabel" class="modal fade" id="modalFormUser" role="dialog" tabindex="-1">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            {{ form_start(formUser) }}
            <div class="modal-header">
                <h5 class="modal-title" id="modalFormUserLabel">Ajouter un utilisateur</h5>
                <button aria-label="Close" class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col">
                        {{ form_row(formUser.email) }}
                    </div>
                    <div class="col">
                        {{ form_row(formUser.plainPassword) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        {{ form_row(formUser.firstname) }}
                    </div>
                    <div class="col">
                        {{ form_row(formUser.surname) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        {{ form_row(formUser.gender) }}
                    </div>
                    <div class="col">
                        {{ form_row(formUser.birthdate) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        {{ form_row(formUser.postAddress) }}
                    </div>
                    <div class="col">
                        {{ form_row(formUser.zipCode) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        {{ form_row(formUser.city) }}
                    </div>
                    <div class="col">
                        {{ form_row(formUser.phone) }}
                    </div>
                </div>

                {{ form_row(formUser.status) }}
                {{ form_row(formUser.roles) }}
                {{ form_row(formUser.activities) }}
            </div>
            <div class="modal-footer">
                {{ form_widget(formUser.Valider,{'attr':{'class':'btn btn-success'}}) }}
                <button class="btn btn-danger" data-dismiss="modal" type="button">Fermer</button>
            </div>
            {{ form_end(formUser) }}
        </div>
    </div>
</div>
