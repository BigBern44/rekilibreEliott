<div aria-hidden="true" aria-labelledby="modalFormPaymentLabel" class="modal fade" id="modalFormPayment" role="dialog" tabindex="-1">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            {{ form_start(formPayments) }}
            <div class="modal-header">
                <h5 class="modal-title" id="modalFormPaymentLabel">Ajouter des paiements</h5>
                <button aria-label="Close" class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-6">
                        {{ form_row(formPayments.user) }}
                    </div>
                </div>
                <div id="layout-payments">
                    {% for formPayment in formPayments.payments %}
                        <div class="row">
                        <div class="col-6">
                                {{ form_row(formPayment.date) }}
                            </div>
                            <div class="col-6">
                                {{ form_row(formPayment.type) }}
                            </div>
                            <div class="col-6">
                                {{ form_row(formPayment.value) }}
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <a href="#" id="addpayment" class="text-primary text-xl ml-2" data-prototype="{% filter escape %}{{ include('form/payment.html.twig',{'form': formPayments.payments.vars.prototype}) }}{% endfilter %}">
                    <i class="far fa-plus-square"></i>
                </a>
            </div>
            <div class="modal-footer">
                {{ form_widget(formPayments.Valider,{'attr':{'class':'btn btn-success'}}) }}
                <button class="btn btn-danger" data-dismiss="modal" type="button">Fermer</button>
            </div>
            {{ form_end(formPayments) }}
        </div>
    </div>
</div>
