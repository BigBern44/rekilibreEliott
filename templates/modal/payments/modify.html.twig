<div aria-hidden="true" aria-labelledby="modalFormPaymentLabel" class="modal fade" id="modalFormPayment{{id}}" role="dialog" tabindex="-1">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            {{ form_start(formModifyPayment) }}
            <div class="modal-header">
                <h5 class="modal-title" id="modalFormPaymentLabel">Modifier un paiement</h5>
                <button aria-label="Close" class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{ form_start(formModifyPayment) }}
                {{ form_row(formModifyPayment.date) }}
                <div class="row">
                    <div class="col-6">
                        {{ form_row(formModifyPayment.type) }}
                    </div>
                    <div class="col-6">
                        {{ form_row(formModifyPayment.value) }}
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                {{ form_widget(formModifyPayment.Valider,{'attr':{'class':'btn btn-success'}}) }}
                <button class="btn btn-danger" data-dismiss="modal" type="button">Fermer</button>
            </div>
            {{ form_end(formModifyPayment) }}
        </div>
    </div>
</div>
