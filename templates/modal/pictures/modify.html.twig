<div aria-hidden="true" aria-labelledby="modalFormPictureLabel" class="modal fade" id="modalFormPicture{{id}}" role="dialog" tabindex="-1">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            {{ form_start(formModifyPicture) }}
            <div class="modal-header">
                <h5 class="modal-title" id="modalFormPictureLabel">Modifier une image</h5>
                <button aria-label="Close" class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{ form_start(formModifyPicture) }}
                <div class="row">
                    <div class="col-md-4">
                        {{ form_row(formModifyPicture.name) }}
                    </div>
                    <div class="col-md-8">
                        {{ form_row(formModifyPicture.file) }}
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                {{ form_widget(formModifyPicture.Valider,{'attr':{'class':'btn btn-success'}}) }}
                <button class="btn btn-danger" data-dismiss="modal" type="button">Fermer</button>
            </div>
            {{ form_end(formModifyPicture) }}
        </div>
    </div>
</div>
