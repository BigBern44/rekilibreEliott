<div aria-hidden="true" aria-labelledby="modalFormPictureLabel" class="modal fade" id="modalFormPicture" role="dialog" tabindex="-1">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            {{ form_start(formPicture) }}
            <div class="modal-header">
                <h5 class="modal-title" id="modalFormPictureLabel">Ajouter une image</h5>
                <button aria-label="Close" class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{ form_start(formPicture) }}
                <div class="row p-2" id="layout-pictures">
                    <div class="col-md-4">
                        {{ form_row(formPicture.name) }}
                    </div>
                    <div class="col-md-8" style="color:black">
                        {{ form_row(formPicture.file) }}
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                {{ form_widget(formPicture.Valider,{'attr':{'class':'btn btn-success'}}) }}
                <button class="btn btn-danger" data-dismiss="modal" type="button">Fermer</button>
            </div>
            {{ form_end(formPicture) }}
        </div>
    </div>
</div>
