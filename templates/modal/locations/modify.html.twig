<div aria-hidden="true" aria-labelledby="modalFormLocationLabel" class="modal fade" id="modalFormLocation{{id}}" role="dialog" tabindex="-1">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            {{ form_start(formModifyLocation) }}
            <div class="modal-header">
                <h5 class="modal-title" id="modalFormLocationLabel">Modifier une salle</h5>
                <button aria-label="Close" class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{ form_start(formModifyLocation) }}
                <div class="row">
                    <div class="col">
                        {{ form_row(formModifyLocation.name) }}
                    </div>
                    <div class="col">
                        {{ form_row(formModifyLocation.address) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        {{ form_row(formModifyLocation.picture) }}
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                {{ form_widget(formModifyLocation.Valider,{'attr':{'class':'btn btn-success'}}) }}
                <button class="btn btn-danger" data-dismiss="modal" type="button">Fermer</button>
            </div>
            {{ form_end(formModifyLocation) }}
        </div>
    </div>
</div>
