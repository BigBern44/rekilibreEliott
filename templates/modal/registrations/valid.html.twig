<div aria-hidden="true" aria-labelledby="modalFormPaymentLabel" class="modal fade" id="modalFormPayment{{id}}" role="dialog" tabindex="-1">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            {{ form_start(formValid) }}
            <div class="modal-header">
                <h5 class="modal-title" id="modalFormPaymentLabel">Valider l'inscription</h5>
                <button aria-label="Close" class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{ form_row(formValid.date, {'id': 'registration_valid_date' ~ id, 'attr': {'data-target': '#registration_valid_date' ~ id}}) }}
                <div id="layout-payments{{id}}">
                    {% for formPayment in formValid.payments %}
                        <div class="row p-2">
                            <div class="col-6">
                                {{ form_row(formPayment.type) }}
                            </div>
                            <div class="col-6">
                                {{ form_row(formPayment.value) }}
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <a href="#" idDiv="{{id}}" class="addpayment text-primary text-xl ml-2" data-prototype="{% filter escape %}{{ include('form/registrationPayment.html.twig',{'form': formValid.payments.vars.prototype}) }}{% endfilter %}">
                    <i class="far fa-plus-square"></i>
                </a>
            </div>
            <div class="modal-footer">
                {{ form_widget(formValid.Valider,{'attr':{'class':'btn btn-success'}}) }}
                <button class="btn btn-danger" data-dismiss="modal" type="button">Fermer</button>
            </div>
            {{ form_end(formValid) }}
        </div>
    </div>
</div>
