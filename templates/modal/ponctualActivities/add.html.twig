<div aria-hidden="true" aria-labelledby="modalFormPonctualActivityLabel" class="modal fade" id="modalFormPonctualActivity" role="dialog" tabindex="-1">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            {{ form_start(formPonctualActivity) }}
            <div class="modal-header">
                <h5 class="modal-title" id="modalFormPonctualActivityLabel">Ajouter une activit√© ponctuelle</h5>
                <button aria-label="Close" class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                {{ form_row(formPonctualActivity.name) }}

                <div class="row">
                    <div class="col">
                        {{ form_row(formPonctualActivity.fromDateTime) }}
                    </div>
                    <div class="col">
                        {{ form_row(formPonctualActivity.toDateTime) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        {{ form_row(formPonctualActivity.fromTime) }}
                    </div>
                    <div class="col">
                        {{ form_row(formPonctualActivity.toTime) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        {{ form_row(formPonctualActivity.maxRegistrations) }}
                    </div>
                    <div class="col">
                        {{ form_row(formPonctualActivity.price) }}
                    </div>
                </div>

                {{ form_row(formPonctualActivity.users) }}
                {{ form_row(formPonctualActivity.interveners) }}
                {{ form_row(formPonctualActivity.location) }}
                {{ form_row(formPonctualActivity.picture) }}

                <div class="row ml-1">
                    <div class="col">
                        {{ form_row(formPonctualActivity.reiki) }}
                    </div>
                    <div class="col">
                        {{ form_row(formPonctualActivity.appNotification) }}
                    </div>
                    <div class="col">
                        {{ form_row(formPonctualActivity.emailNotification) }}
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                {{ form_widget(formPonctualActivity.Valider,{'attr':{'class':'btn btn-success'}}) }}
                <button class="btn btn-danger" data-dismiss="modal" type="button">Fermer</button>
            </div>
            {{ form_end(formPonctualActivity) }}
        </div>
    </div>
</div>
