<div aria-hidden="true" aria-labelledby="modalFormPonctualActivityLabel" class="modal fade" id="modalFormPonctualActivity{{id}}" role="dialog" tabindex="-1">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            {{ form_start(formModifyPonctualActivity) }}
            <div class="modal-header">
                <h5 class="modal-title" id="modalFormPonctualActivityLabel">Modifier une activit√© ponctuelle</h5>
                <button aria-label="Close" class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{ form_row(formModifyPonctualActivity.name) }}

                <div class="row">
                    <div class="col">
                        {{ form_row(formModifyPonctualActivity.fromDateTime, {'id': 'add_hebdo_activity_fromDateTime' ~ id, 'attr': {'data-target': '#add_hebdo_activity_fromDateTime' ~ id}}) }}
                    </div>
                    <div class="col">
                        {{ form_row(formModifyPonctualActivity.toDateTime, {'id': 'add_hebdo_activity_toDateTime' ~ id, 'attr': {'data-target': '#add_hebdo_activity_toDateTime' ~ id}}) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        {{ form_row(formModifyPonctualActivity.fromTime, {'id': 'add_hebdo_activity_fromTime' ~ id, 'attr': {'data-target': '#add_hebdo_activity_fromTime' ~ id}}) }}
                    </div>
                    <div class="col">
                        {{ form_row(formModifyPonctualActivity.toTime, {'id': 'add_hebdo_activity_toTime' ~ id, 'attr': {'data-target': '#add_hebdo_activity_toTime' ~ id}}) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        {{ form_row(formModifyPonctualActivity.maxRegistrations) }}
                    </div>
                    <div class="col">
                        {{ form_row(formModifyPonctualActivity.price) }}
                    </div>
                </div>

                {{ form_row(formModifyPonctualActivity.users) }}
                {{ form_row(formModifyPonctualActivity.interveners) }}
                {{ form_row(formModifyPonctualActivity.location) }}
                {{ form_row(formModifyPonctualActivity.picture) }}

                <div class="row ml-1">
                    <div class="col">
                        {{ form_row(formModifyPonctualActivity.reiki) }}
                    </div>
                    <div class="col">
                        {{ form_row(formModifyPonctualActivity.appNotification) }}
                    </div>
                    <div class="col">
                        {{ form_row(formModifyPonctualActivity.emailNotification) }}
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                {{ form_widget(formModifyPonctualActivity.Valider,{'attr':{'class':'btn btn-success'}}) }}
                <button class="btn btn-danger" data-dismiss="modal" type="button">Fermer</button>
            </div>
            {{ form_end(formModifyPonctualActivity) }}
        </div>
    </div>
</div>
